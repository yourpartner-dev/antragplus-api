{% layout "base" %} {% block content %}

<p style="padding-bottom: 20px">Hello {{ first_name }} {{ last_name }},</p>

<p style="padding-bottom: 30px">
  Your measure {{measure_title}} is about to expire. You still have time until {{measure_due_date}} - a good time to check whether anything is pending.
</p>

<a
  class="button"
  rel="noopener"
  target="_blank"
  href="{{url}}"
  style="
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    text-decoration: none;
    display: inline-block;
    padding: 11px 24px;
    border-radius: 8px;
    background: #171717;
    border: 1px solid #ffffff;
  "
>
  <!--[if mso]>
    <i style="letter-spacing: 25px; mso-font-width: -100%; mso-text-raise: 30pt"
      >&nbsp;</i
    >
  <![endif]-->
  <span style="mso-text-raise: 15pt">Complete measure</span>
  <!--[if mso]>
    <i style="letter-spacing: 25px; mso-font-width: -100%">&nbsp;</i>
  <![endif]-->
</a>


{% endblock %}
